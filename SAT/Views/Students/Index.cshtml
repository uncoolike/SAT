@model IEnumerable<SAT.DATA.Student>

@{
    ViewBag.Title = "Students";
}

<h1>@ViewBag.Title</h1>


<table class="table">
    <tr class="text-center">
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Major)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhotoUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentStatus.SSName)
        </th>
        <th>
            @if (Request.IsAuthenticated && User.IsInRole("Admin"))
            {
                <button class="btn">
                    @Html.ActionLink("Add A Student", "Create")
                </button>
            }
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a href="@Url.Action("Details", "Students", new { id=item.StudentID })">

                    @Html.DisplayFor(modelItem => item.FullName)
                </a>
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Major)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a href="@Url.Action("Details", "Students", new { id=item.StudentID})"><img src="~/Content/img/t_@item.PhotoUrl" alt="@item.FullName Image" title="@item.FullName" /></a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentStatus.SSName)
            </td>
            @if (Request.IsAuthenticated && User.IsInRole("Admin"))
            {
                <td class="text-center">
                    <a href="@Url.Action("Edit", "Students", new { id=item.StudentID})" class="mx-2"><i class="fas fa-edit"></i></a>
                    <a href="@Url.Action("Delete", "Students", new { id=item.StudentID})" class="mx-2"><i class="fas fa-trash-alt"></i></a>
                </td>
            }

        </tr>
    }

</table>
