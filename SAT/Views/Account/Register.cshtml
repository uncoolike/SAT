@model IdentitySample.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}


<main>
    <div class="container z-depth-1">
        <section class="px-md-5 mx-md-5 text-center text-lg-left dark-grey-text">
            <div class="row d-flex justify-content-center">
                <div class="card align-items-center col-md-6 bg-light py-3 m-auto">
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "text-center", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <h1 class="mb-4">@ViewBag.Title</h1>
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <!-- Email -->
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control mb-4 pl-3", placeholder = "E-mail" })
                        <!-- Password -->
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control mb-4 pl-3", placeholder = "Password" })
                        <!-- Password Confirmation -->
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control mb-4 pl-3", placeholder = "Confirm Password" })
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" class="btn btn-default bg-info" value="Register" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>
    </div>
</main>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
