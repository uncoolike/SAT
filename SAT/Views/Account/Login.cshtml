@model IdentitySample.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
}

<main >
    <div class="containerz-depth-1">
        <section class="px-md-5 mx-md-5 text-center text-lg-left dark-grey-text">
            <div class="row d-flex justify-content-center">
                <div class="card align-items-center col-md-6 bg-light py-3 m-auto">
                    <!-- Login Form -->
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "text-center", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <h1 @*class="h4 mb-4"*@>@ViewBag.Title</h1>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <!-- Email -->
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control mb-4 pl-3", placeholder = "E-mail", id = "defaultLoginFormEmail", type = "email" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        <!-- Password -->
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control mb-4", placeholder = "Password", type = "password", id = "defaultLoginFormPassword" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        <div class="d-flex justify-content-around">
                            <div>
                                <!-- Remember me -->
                                <div class="custom-control custom-checkbox">
                                    @Html.CheckBoxFor(m => m.RememberMe, new { @class = "custom-control-input", id = "defaultLoginFormRemember" })
                                    <label class="custom-control-label" for="defaultLoginFormRemember">Remember me</label>
                                </div>
                            </div>
                        </div>
                            <div>
                                <!-- Forgot password -->
                                <a href="">Forgot password?</a>
                            </div>
                        
                        <!-- Sign in button -->
                        <button class="btn btn-info btn-block my-4" type="submit">Sign in</button>
                        <!-- Register -->
                        <p>
                            Not a member?
                            @Html.ActionLink("Register", "Register")
                        </p>

                    }
                </div>
            </div>
        </section>
    </div>
</main>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}